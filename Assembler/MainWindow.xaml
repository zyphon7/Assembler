<Window x:Class="Assembler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assembler"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="805">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="1" x:Name="Assembler" Content="Assembler" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="40" />
        <TextBox Grid.Column="0" Grid.Row="0" x:Name="file" Width="135" Height="20" MinWidth="135" MaxWidth="135" HorizontalAlignment="Left" IsReadOnly="True" Margin="30,0,0,0"/>
        <Button Grid.Column="0" Grid.Row="0" x:Name="OpenFile" Click="OpenFile_Click" Content="Open File" Width="60" Height="20" HorizontalAlignment="Right" Margin="0,0,30,0"/>

    </Grid>
</Window>
